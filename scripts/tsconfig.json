{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.js"
  ]
}